{{#if showLabels}}
        <span class="toggle-text toggle-prefix {{size}}">
                {{offLabelValue}}
        </span>
{{/if}}

{{input id=forId type='checkbox' checked=rawToggled class='x-toggle' disabled=disabled name=name}}

<label class="x-toggle-btn {{themeClass}} {{size}} {{if disabled 'x-toggle-disabled'}}"
  for={{forId}}
  data-tg-off={{offLabelValue}}
  data-tg-on={{onLabelValue}}>
</label>

{{#if showLabels}}
        <span class="toggle-text toggle-postfix {{size}}">
                {{onLabelValue}}
        </span>
{{/if}}
